<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        android:id="@+id/relative1"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/ghostWhite"
        tools:context="view.StartUpScreen">


    <LinearLayout
            android:id="@+id/layout_Image"
            android:layout_above="@id/layoutButtons"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="150dp"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:background="@drawable/container_blue"
            android:orientation="vertical">

        <ImageView
                android:layout_above="@id/title"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="20dp"
                android:id="@+id/imageWallet"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:src="@drawable/wallet1"/>


        <TextView
                android:id="@+id/title"
                android:layout_gravity="center"
                android:layout_marginBottom="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="40dp"
                android:textColor="@color/black"
                android:text="@string/Title"/>

        <TextView
                android:id="@+id/description"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="70dp"
                android:textSize="20dp"
                android:textColor="@color/ghostWhite"
                android:text="@string/Description"/>

    </LinearLayout>

    <LinearLayout
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="30dp"
            android:id="@+id/layoutButtons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <Button
                android:id="@+id/login_StartScreen"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="40dp"
                android:background="@drawable/login_startup_button"
                android:textColor="@color/black"
                android:text="@string/login"/>
        <Button

                android:id="@+id/signUp_StartScreen"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="@drawable/rectangle_button"
                android:textColor="@color/black"
                android:text="@string/Signup"/>
    </LinearLayout>

</RelativeLayout>