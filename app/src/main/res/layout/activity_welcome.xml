<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="view.Welcome">


    <LinearLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/balance_color"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.32"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        app:layout_constraintVertical_bias="0">


        <LinearLayout
            android:padding="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                android:id="@+id/imageView"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:srcCompat="@drawable/account_my" /></LinearLayout>


            <LinearLayout
                android:orientation="vertical"
                android:paddingLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:textColor="#ffffff"
                android:layout_weight="1"
                android:text="David mwanza" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="16dp"
                    android:textColor="#ffffff"
                    android:text="devimumo@gmail.com"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />  </LinearLayout>






        </LinearLayout>




    </LinearLayout>

    <LinearLayout
        android:id="@+id/cards"

        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"




        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="@+id/relativeLayout"
        app:layout_constraintVertical_bias="0.993"
        app:layout_constraintHeight_percent="0.75"
        tools:layout_editor_absoluteX="1dp">

        <androidx.core.widget.NestedScrollView
            android:layout_marginTop="50dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >


            <GridLayout

                android:columnCount="2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:layout_gravity="center"
                android:paddingLeft="40dp">


                <androidx.cardview.widget.CardView
                    android:id="@+id/transactions"
                    android:onClick="Card_click"
                    android:layout_marginStart="18dp"
                    android:layout_marginTop="100dp"
                    android:clickable="true"
                    android:layout_width="wrap_content"
                    android:layout_gravity="center"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="2dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="18dp">

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/balancesheet"
                        android:layout_gravity="center" />

                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:id="@+id/mpesa"
                    android:onClick="Card_click"
                    android:layout_marginTop="100dp"
                    android:layout_width="wrap_content"
                    android:layout_gravity="center"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="2dp"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/mpesh"
                        android:layout_gravity="center"/>

                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:id="@+id/loans"
                    android:onClick="Card_click"
                    android:layout_marginStart="18dp"
                    android:layout_marginTop="20dp"
                    android:layout_width="wrap_content"
                    android:layout_gravity="center"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="2dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="18dp">

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/transaction"
                        android:layout_gravity="center" />

                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:id="@+id/withdraw"
                    android:onClick="Card_click"
                    android:layout_marginTop="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="2dp"
                    android:layout_gravity="center">

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/loan"
                        android:layout_gravity="center" />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/balance"
                    android:onClick="Card_click"
                    android:layout_marginStart="18dp"
                    android:layout_marginTop="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="2dp"
                    android:layout_marginBottom="3dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="18dp">

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/wallet"
                        android:layout_gravity="center" />

                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:id="@+id/my_account"
                    android:onClick="Card_click"
                    android:layout_marginTop="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="2dp"
                    android:layout_marginBottom="3dp"
                    android:layout_gravity="center">

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/account_my"
                        android:layout_gravity="center"/>

                </androidx.cardview.widget.CardView>




            </GridLayout>
        </androidx.core.widget.NestedScrollView>








    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="80dp"
app:cardCornerRadius="15dp"
        app:cardElevation="4dp"
        android:layout_marginHorizontal="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintTop_toTopOf="@+id/cards">

       <TextView
           android:background="@color/orange"
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:text="ksh. 29,000"
            android:textColor="#ffffff"
           android:padding="3dp"
           android:alpha="0.6"
           android:gravity="center"
           android:layout_gravity="center"
           android:textSize="34dp"/>

    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>